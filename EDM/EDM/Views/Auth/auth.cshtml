@using Public.Models
@{
    Layout = "~/Views/_Shared/Auth/auth.cshtml";
    Permission per = Session["Permission"] as Permission;
}
@section scripts {
    <script src="~/Content/Auth/auth.js"></script>
    <script src="~/Content/Auth/doiMatKhau.js"></script>
    <script>
        var auth = new Auth();
        auth.init();

        var doiMatKhau = new DoiMatKhau('#form-changepass', '#input-matkhau-moi', '#input-matkhau-moi-xacnhan');
        doiMatKhau.kiemTraMatKhau();
    </script>
}
@section styles {
    <link href="~/Assets/templates/assets/css/pages/auth.css" rel="stylesheet" />
}
<section class="section banner gradient-background p-5" id="page-auth" style="background: @per.DonViSuDung.GiaoDien; min-height: calc(100vh - 77px);">
    <div class="container h-100">
        <div class="row">
            <div class="col order-2 order-lg-1">
                @RenderBody()
            </div>
            <div class="col order-1 order-lg-2 hero-img" data-aos="zoom-in" data-aos-delay="200">
                <img src="@per.DonViSuDung.Banner" class="img-fluid animated" alt="">
            </div>
        </div>
    </div>
</section>