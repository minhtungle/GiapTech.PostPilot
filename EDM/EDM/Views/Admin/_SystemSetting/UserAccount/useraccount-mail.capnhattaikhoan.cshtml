
@using UserAccount.Models
@model UserAccount.Models.CapNhatTaiKhoanMailM<tbNguoiDungExtend>
@{
    tbNguoiDungExtend nguoiDung_OLD = Model.NguoiDung_OLD;
    tbNguoiDungExtend nguoiDung_NEW = Model.NguoiDung_NEW;
}
<div class="row">
    <div class="col-12">
        <p class="font-bold" style="font-weight: 700 !important;">Thông tin người dùng:</p>
        <table class="table table-bordered w-100" style="border: 1px solid black; width: 100%;">
            <thead>
                <tr>
                    <th class="text-center" style="text-align: center !important; border: 1px solid black; padding: .5rem; background-color: #0b0c51; color: white;">#</th>
                    <th class="text-center" style="text-align: center !important; border: 1px solid black; padding: .5rem; background-color: #0b0c51; color: white;">Thông tin cũ</th>
                    <th class="text-center" style="text-align: center !important; border: 1px solid black; padding: .5rem; background-color: #0b0c51; color: white;">Thông tin mới</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.HinhThucCapNhat == "doimatkhau")
                {
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Mật khẩu</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.MatKhauCu</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.MatKhauMoi</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Tên người dùng</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.TenNguoiDung</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.TenNguoiDung</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Tên đăng nhập</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.TenDangNhap</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.TenDangNhap</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Giới tính</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_OLD.GioiTinh.Value ? "Nam" : "Nữ")</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_NEW.GioiTinh.Value ? "Nam" : "Nữ")</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Kích hoạt</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_OLD.KichHoat.Value ? "✔️" : "✖️")</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_NEW.KichHoat.Value ? "✔️" : "✖️")</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Email</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.Email</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.Email</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Số điện thoại</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.SoDienThoai</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.SoDienThoai</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Ngày sinh</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_OLD.NgaySinh == null ? "" : nguoiDung_NEW.NgaySinh.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture))</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@(nguoiDung_NEW.NgaySinh == null ? "" : nguoiDung_NEW.NgaySinh.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture))</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Kiểu người dùng</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.KieuNguoiDung.TenKieuNguoiDung</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.KieuNguoiDung.TenKieuNguoiDung</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Cơ cấu tổ chức</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.CoCauToChuc.TenCoCauToChuc</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.CoCauToChuc.TenCoCauToChuc</td>
                    </tr>
                    <tr>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">Chức vụ</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_OLD.ChucVu.TenChucVu</td>
                        <td style="text-align: center !important; border: 1px solid black; padding: .5rem;">@nguoiDung_NEW.ChucVu.TenChucVu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    @Html.Partial("~/Views/_Shared/Mail/mail-footer.cshtml")
</div>