@using EDM_DB
@using UserAccount.Models
@{
    List<tbNguoiDungExtend> nguoiDungs = ViewBag.nguoiDungs;
    List<Guid> idNguoiDungs_XOA = ViewBag.idNguoiDungs_XOA;
}
<div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <table class="table table-hover table-bordered w-100 nowrap" id="useraccount-thaythe-getList" data-page-length="-1">
                <thead>
                    <tr>
                        <th class="text-center" data-orderable="false"></th>
                        <th class="text-center">Chọn quyền truy cập thay thế cho các văn bản đang sử dụng</th>
                    </tr>
                </thead>
                <tfoot class="show-footer-above">
                    <tr>
                        <th></th>
                        <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                    </tr>
                </tfoot>
                @foreach (tbNguoiDungExtend nguoiDung in nguoiDungs)
                {
                    if (idNguoiDungs_XOA.Contains(nguoiDung.IdNguoiDung))
                    {
                        <tr id="@nguoiDung.IdNguoiDung">
                            <td></td>
                            <td class="text-decoration-line-through">@nguoiDung.TenDangNhap - @nguoiDung.TenNguoiDung</td>
                        </tr>
                    }
                    else
                    {
                        <tr id="@nguoiDung.IdNguoiDung">
                            <td class="text-center"><input class="form-check-input checkRow-useraccount-thaythe-getList" type="checkbox" data-id="@nguoiDung.IdNguoiDung" /></td>
                            <td>@nguoiDung.TenDangNhap - @nguoiDung.TenNguoiDung</td>
                        </tr>
                    }
                }
            </table>
        </div>
        <div class="modal-footer p-2 flex-column">
            <p class="text-center" id="useraccount-confirmdialog-content"></p>
            <div class="w-100 flex-row text-center">
                <button type="button" class="btn btn-primary ml-1" onclick="ua.nguoiDung.delete()">
                    <i class="bi bi-check d-flex d-sm-none"></i>
                    <span class="d-none d-sm-block">Đồng ý</span>
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x d-flex d-sm-none"></i>
                    <span class="d-none d-sm-block">Đóng</span>
                </button>
            </div>
        </div>
    </div>
</div>