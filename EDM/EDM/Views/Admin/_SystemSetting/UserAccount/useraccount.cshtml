@using Public.Models
@{
    ViewBag.Title = "Ngươi dùng";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
    List<ThaoTac> thaoTacs = ViewBag.thaoTacs;
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Người dùng</li>
}
@section scripts {
    <script src="~/Content/Admin/_SystemSetting/UserAccount/useraccount.js"></script>
    <script src="~/Content/Auth/doiMatKhau.js"></script>
    <script>
        var ua = new UserAccount();
        ua.init();
    </script>
}
<section class="section" page-group="page-group-systemsetting" id="page-useraccount" data-aos="fade-up">
    <div class="card">
        <div class="card-content">
            <div class="card-body">
                <div class="btn-group btn-group-sm" role="group">
                    <!--Thao tác-->
                    <a class="btn btn-primary"><i class="bi bi-three-dots-vertical"></i></a>
                    <div class="btn-group btn-group-sm dropdown">
                        <button type="button" title="Thêm mới" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split"
                                data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                                data-reference="parent">
                            Thao tác
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#" onclick="ua.nguoiDung.displayModal_CRUD('create')">
                                <i class="bi bi-plus-square"></i> Thêm mới
                            </a>
                            <a class="dropdown-item" href="#" onclick="ua.displayModal_Excel_NguoiDung()">
                                <i class="bi bi-file-excel"></i> Thêm excel
                            </a>
                            <a class="dropdown-item" href="#" onclick="ua.nguoiDung.displayModal_Delete('multiple')">
                                <i class="bi bi-trash3-fill"></i> Xóa bỏ
                            </a>
                        </div>
                    </div>
                    <!--Tải xuống-->
                    <a class="btn btn-primary"><i class="bi bi-download"></i></a>
                    <div class="btn-group btn-group-sm dropdown">
                        <button type="button" title="Tải xuống" class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent">
                            Tải xuống
                        </button>
                        <div class="dropdown-menu">
                            @*<a class="dropdown-item" href="#" onclick="ua.nguoiDung.btnDownload('.buttons-copy')"><i class="bi bi-files"></i> Sao chép</a>*@
                            <a class="dropdown-item" href="#" onclick="ua.nguoiDung.btnDownload('.buttons-excel')"><i class="bi bi-file-earmark-spreadsheet"></i> Excel</a>
                            @*<a class="dropdown-item" href="#" onclick="ua.nguoiDung.btnDownload('.buttons-pdf')"><i class="bi bi-filetype-pdf"></i> PDF</a>*@
                            @*<a class="dropdown-item" href="#" onclick="ua.nguoiDung.btnDownload('.buttons-print')"><i class="bi bi-printer"></i> In</a>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-content">
            @Html.Partial("~/Views/Admin/_SystemSetting/UserAccount/useraccount-getList.cshtml")
        </div>
    </div>
</section>
<!--useraccount-crud-->
<div class="modal fade text-left" id="useraccount-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--useraccount-delete-->
<div class="modal fade text-left" id="useraccount-delete" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
<!--useraccount-excel.nguoidung-->
@Html.Partial("~/Views/Admin/_SystemSetting/UserAccount/useraccount-excel.nguoidung/excel.nguoidung.cshtml")