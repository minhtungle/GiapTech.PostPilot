@{
    string HtmlCoCaus = ViewBag.HtmlCoCaus;
}
<div class="card-body">


    <table class="table table-hover table-bordered table-treeview w-100 nowrap" id="organization-getList" data-page-length="-1">
        <thead>
            <tr>
                <th class="text-center" data-orderable="false">Tên cơ cấu tổ chức</th>
                <th class="text-center w-30" data-orderable="false">
                    <a href="#" class="btn btn-sm btn-success" title="Thêm mới" onclick="org.coCau.displayModal_CRUD('create')"><i class="bi bi-plus-square"></i></a>
                    <a href="#" class="btn btn-sm btn-primary" title="Thêm tệp" onclick="org.displayModal_Excel_CoCau()"><i class="bi bi-filetype-xlsx"></i></a>
                </th>
            </tr>
        </thead>
        <tfoot class="show-footer-above">
            <tr>
                <th>
                    <div class="input-group">
                        <div class="input-group-text">
                            <input class="form-check-input" data-id="0" type="checkbox" title="Chọn tất cả" />
                        </div>
                        <input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." />
                    </div>
                </th>
                <th>
                    <input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." disabled />
                </th>
            </tr>
        </tfoot>
        @if (HtmlCoCaus != "") {
            <tbody>
                @MvcHtmlString.Create(HtmlCoCaus)
            </tbody>
        }
    </table>
</div>
