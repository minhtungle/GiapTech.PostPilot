@model Applications.QuanLyTaiLieu.Models.tbTaiLieuExtend
@{
}

<div class="modal-dialog modal-dialog-scrollable modal-full" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Xem chi tiết
            </h5>
        </div>
        <div class="modal-body">
            <div class="row">
                <!--Id-->
                <input id="input-idvanban" value="@Model.TaiLieu.IdTaiLieu" hidden />
                <!--Ảnh-->
                <div class="col-12" id="img-container">
                    @if (Model.TaiLieu.LoaiTep == ".mp4" || Model.TaiLieu.LoaiTep == ".mp3")
                    {
                        <video src="@Model.TaiLieu.DuongDanVatLi" style="width: 100%; height: 70vh; border: 1px solid var(--bs-body-color)" />
                    }
                    else if (Model.TaiLieu.LoaiTep == ".pdf")
                    {
                        <iframe src="/ViewerJS/#../@Model.TaiLieu.DuongDanVatLi" style="width: 100%; height: 70vh; border: 1px solid var(--bs-body-color)"></iframe>
                    }
                    else
                    {
                        <img src="@Model.TaiLieu.DuongDanVatLi" 
                             style="width: 100%; height: 70vh; border: 1px solid var(--bs-body-color); object-fit: contain;" />
                    }
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                <span class="">Đóng</span>
            </button>
        </div>
    </div>
</div>