@using Applications.QuanLySanPham.Models
@model List<tbSanPhamExtend>

<div class="card-body" intro-container="dulieu-container">
    <div class="mb-2 toggle-vis-bar" intro-container="dulieu-hienthicot">
        Hiển thị:
        <a href="#" class="toggle-vis" data-table="quanlysanpham-getList" data-column="1">Loại sản phẩm</a> |
        <a href="#" class="toggle-vis" data-table="quanlysanpham-getList" data-column="3">Thông tin</a>
    </div>
    <table class="table table-hover table-bordered table-sticky w-100" id="quanlysanpham-getList" data-page-length="10">
        <thead class="nowrap" style="white-space: nowrap !important">
            <tr>
                <th class="text-center" data-orderable="false"></th>

                <th class="text-center">Tên sản phẩm</th>
                <th class="text-center">Loại khóa học</th>
                <th class="text-center">Loại sản phẩm</th>

                @*<th class="text-center" intro-container="dulieu-tacvu" data-orderable="false">Tác vụ</th>*@
            </tr>
        </thead>
        <tfoot class="show-footer-above">
            <tr>
                <th class="text-center"><input class="form-check-input checkAll-quanlysanpham-getList" type="checkbox" title="Chọn tất cả" /></th>

                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>

                @*<th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." disabled /></th>*@
            </tr>
        </tfoot>
        <tbody>
            @foreach (var sanPham in Model)
            {
                <tr id="@sanPham.SanPham.IdSanPham">
                    <td class="text-center"><input class="form-check-input checkRow-quanlysanpham-getList" type="checkbox" /></td>
                    <td class="text-center">@sanPham.SanPham.TenSanPham</td>
                    <td class="text-center">@sanPham.LoaiKhoaHoc.TenLoaiKhoaHoc</td>
                    <td class="text-center">@sanPham.LoaiSanPham.TenLoaiSanPham</td>
                </tr>
            }
        </tbody>
    </table>
</div>