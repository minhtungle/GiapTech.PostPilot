@using Public.Models
@model Applications.QuanLyAIBot.Dtos.Index_OutPut_Dto
@{
    ViewBag.Title = "Quản lý ai bot";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
    var thaoTacs = Model.ThaoTacs;
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Quản lý ai bot</li>
}
@section styles {
    @*<link href="~/Content/Admin/QuanLyAIBot/quanlyaibot.css" rel="stylesheet" />*@
}
@section scripts {
    <script src="~/Content/Admin/QuanLyAIBot/quanlyaibot.js"></script>
    <script>
        var quanLyAIBot = new QuanLyAIBot();
        quanLyAIBot.init();
    </script>
}
<section class="section" page-group="page-group-quanlyaibot" id="page-quanlyaibot" data-aos="fade-up">
    <div class="card" intro-container="thanhtacvu">
        <div class="card-content">
            <div class="card-body" intro-container="thaotac-coban">
                <div class="btn-group btn-group-sm" role="group">
                    @{
                        if (thaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-themmoi"))
                        {
                            <!--Thêm mới-->
                            <a class="btn btn-success"><i class="bi bi-plus-circle-fill"></i></a>
                            <a class="btn btn-light-secondary"
                               onclick="quanLyAIBot.aiBot.displayModal_CRUD('create')">
                                Thêm mới
                            </a>
                        }
                        if (thaoTacs.Exists(x => x.MaThaoTac == "quanlyaibot-xoabo"))
                        {
                            <!--Xóa bỏ-->
                            <a class="btn btn-primary"><i class="bi bi-trash3-fill"></i></a>
                            <a class="btn btn-light-secondary"
                               onclick="quanLyAIBot.aiBot.delete('multiple')">
                                Xóa bỏ
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card" id="aibot-getList-container"></div>
</section>
<!--aibot-crud-->
<div class="modal fade text-left" id="aibot-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>