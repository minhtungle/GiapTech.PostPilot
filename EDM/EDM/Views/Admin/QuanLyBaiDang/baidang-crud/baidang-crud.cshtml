@using UserAccount.Models;
@using EDM_DB
@{
    var guid = Guid.NewGuid();
}
<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-full" role="document" style="align-items: normal !important">
    <div class="modal-content">
        <div class="modal-header justify-content-start gap-1">
            <!--#-->
            <div class="btn-group btn-group-sm" role="group">
                <a class="btn btn-primary" title="Làm mới"><i class="bi bi-repeat"></i></a>
                <a class="btn btn-light-secondary" onclick="ua.excelNguoiDung.reload()">
                    Làm mới
                </a>
                <a class="btn btn-primary" title="Thêm tệp"><i class="bi bi-upload"></i></a>
                <label class="btn btn-light-secondary" for="select-file">
                    Thêm tệp
                </label>
                <input class="btn btn-success" id="select-file" type="file" accept=".xlsx, .xls" onchange="ua.excelNguoiDung.upload()" hidden>
                <a class="btn btn-primary" title="Tải xuống"><i class="bi bi-download"></i></a>
                <div class="btn-group btn-group-sm dropdown">
                    <a class="btn btn-light-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent" title="Tải xuống">
                        Tải xuống
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#" onclick="ua.excelNguoiDung.download('data')"><i class="bi bi-file-bar-graph"></i> Xuất dữ liệu <span class="text-danger">(Bản ghi đang chọn)</span></a>
                        <a class="dropdown-item" href="#" onclick="ua.excelNguoiDung.download('no-data')"><i class="bi bi-file-earmark"></i> Tải tệp mẫu</a>
                    </div>
                </div>
            </div>
            <!--#-->
            <div class="btn-group btn-group-sm" role="group">
                <a class="btn btn-primary" title="Cập nhật trường thông tin"><i class="bi bi-pencil-square"></i></a>
                <a class="btn btn-light-secondary" onclick="ua.excelNguoiDung.displayModal_UpdateMultipleCell()">
                    Cập nhật
                </a>
            </div>
        </div>
        <div class="modal-body table-responsive" id="excel-nguoidung-getList-container">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <table class="table table-hover table-bordered w-100 nowrap" id="excel-nguoidung-getList" data-page-length="10" data-order="[[ 1, &quot;asc&quot; ]]">
                        <thead>
                            <tr>
                                <th class="text-center" data-orderable="false">
                                    <a href="#" class="btn btn-sm btn-success" title="Thêm" onclick="ua.excelNguoiDung.createRow()"><i class="bi bi-plus-square-fill"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger" title="Xóa" onclick="ua.excelNguoiDung.deleteRow()"><i class="bi bi-trash3-fill"></i></a>
                                </th>
                                <th class="text-center w-70" style="min-width: 10rem!important">Id bài viết</th>
                            </tr>
                        </thead>
                        <tfoot class="show-footer-above">
                            <tr>
                                <th class="text-center"><input class="form-check-input checkAll-excel-nguoidung-getList" type="checkbox" title="Chọn tất cả" /></th>
                                <th><input type="text" class="form-control dt-search-col" placeholder="Tìm kiếm ..." /></th>
                            </tr>
                        </tfoot>
                        <tbody id="tbody-container">
                            <tr row="@guid" onclick="ua.excelNguoiDung.readRow(this)">
                                <td class="text-center"><input class="form-check-input checkRow-excel-nguoidung-getList" type="checkbox" /></td>
                                <td class="w-70" style="vertical-align: top;">
                                    <span data-tentruong="NoiDung">@guid</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-sm-12 col-md-8" id="excel-nguoidung-read-container"
                     style="overflow-y: scroll; border: 1px solid #d3d3d35c;">
                    <div class="row excel-nguoidung-read p-2" row="@guid">
                        <div class="col-sm-12 col-lg-12">
                            @Html.Partial("~/Views/Admin/QuanLyBaiDang/baidang-crud/form-thongtinchung.cshtml")
                        </div>
                        <div class="col-sm-12 col-lg-6">
                            @Html.Partial("~/Views/Admin/QuanLyBaiDang/baidang-crud/form-lichdangbai.cshtml")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" onclick="ua.excelNguoiDung.saveByGroup()">
                @*<i class="bi bi-check d-flex d-sm-none"></i>*@
                <span class="">Lưu</span>
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                @*<i class="bi bi-x d-flex d-sm-none"></i>*@
                <span class="">Đóng</span>
            </button>
        </div>
    </div>
</div>