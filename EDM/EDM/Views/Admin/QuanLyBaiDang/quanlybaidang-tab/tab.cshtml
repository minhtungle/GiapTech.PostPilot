<div class="list-group list-group-horizontal mb-1 text-center col-md-6 col-sm-12 justify-content-sm-start justify-content-center"
     id="tab-loaithongke" role="tablist">
    <a class="list-group-item list-group-item-action active" id="tongquan-getList-list"
       data-bs-toggle="list" href="#tongquan-getList" role="tab">Bài đăng</a>
    <a class="list-group-item list-group-item-action" id="phanloai-getList-list"
       data-bs-toggle="list" href="#phanloai-getList" role="tab">Phân loại</a>
</div>
<div class="tab-content text-justify mt-2">
    <div class="tab-pane fade show active py-2" id="tongquan-getList" role="tabpanel"
         aria-labelledby="tongquan-getList-list">
        <div class="row">
            <div class="col-12">
                <div class="divider divider-right" data-bs-toggle="collapse" href="#tongquan-collapse">
                    <div class="divider-text font-bold">
                        <div class="badges">
                            <span class="badge bg-primary c-pointer">Nhấn xem bộ lọc</span>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="tongquan-collapse">
                    <div class="row">
                        <!--Nội dung-->
                        <div class="col-12 col-sm-12 col-md-12">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="input-noidung">Nội dung</label>
                                    <textarea class="form-control min-h-100 max-h-300" id="input-noidung" rows="5"
                                              placeholder="Nhập thông tin ..."></textarea>
                                    <div class="invalid-feedback feedback" for="input-noidung">Không được để trống</div>
                                </div>
                            </div>
                        </div>
                        <!--Chiến dịch-->
                        <div class="col-sm-12 col-md-4">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="select-loaithongke">Chọn chiến dịch</label>
                                    <select class="form-control form-select2"
                                            id="select-loaithongke" name="select-loaithongke">
                                        <option value="theonam" selected>Theo năm</option>
                                        <option value="theothang">Theo tháng</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!--Ngày tạo-->
                        <div class="col-sm-12 col-md-4">
                            <div class="position-relative">
                                <div class="form-group">
                                    <label class="">Ngày tạo</label>
                                    <input type="text" class="form-control dateformat" placeholder="Nhập thông tin ..."
                                           id="input-ngaytao" name="input-ngaytao"
                                           value="@DateTime.Now.ToString("MM/yyyy")">
                                </div>
                            </div>
                        </div>
                        <!--Ngày đăng bài-->
                        <div class="col-sm-12 col-md-4">
                            <div class="position-relative">
                                <div class="form-group">
                                    <label class="">Ngày đăng bài</label>
                                    <input type="text" class="form-control dateformat" placeholder="Nhập thông tin ..."
                                           id="input-ngaydangbai" name="input-ngaydangbai"
                                           value="">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 py-2 text-center">
                            <button type="button" class="btn btn-sm btn-primary ml-1 button-timkiem">
                                <span class="">Tìm kiếm</span>
                            </button>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-12" id="baidang-getList-container"></div>
        </div>
    </div>
    <div class="tab-pane fade py-2" id="phanloai-getList" role="tabpanel"
         aria-labelledby="phanloai-getList-list">
        <div class="row">
            <div class="col-12">
                <div class="divider divider-right
             " data-bs-toggle="collapse" href="#chiendich-collapse">
                    <div class="divider-text font-bold">
                        <div class="badges">
                            <span class="badge bg-primary c-pointer">Nhấn xem bộ lọc</span>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="chiendich-collapse">
                    <div class="row">
                        <!--Loại thống kế-->
                        <div class="col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group mb-3">
                                    <label class="" for="select-loaithongke">Chọn loại thống kê</label>
                                    <select class="form-control form-select2"
                                            id="select-loaithongke" name="select-loaithongke">
                                        <option value="theonam" selected>Theo năm</option>
                                        <option value="theothang">Theo tháng</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <!--Thời gian-->
                        <div class="col-sm-12 col-md-6">
                            <div class="position-relative">
                                <div class="form-group">
                                    <label class="">Thời gian</label>
                                    <input type="text" class="form-control datetime" placeholder="Nhập thông tin ..."
                                           id="input-thoigian" name="input-thoigian"
                                           value="">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 py-2 text-center">
                            <button type="button" class="btn btn-sm btn-primary ml-1 button-timkiem">
                                <span class="">Tìm kiếm</span>
                            </button>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
        <div class="row py-2">
            <div class="col-12" id="chiendich-getList-container"></div>
        </div>
    </div>
</div>