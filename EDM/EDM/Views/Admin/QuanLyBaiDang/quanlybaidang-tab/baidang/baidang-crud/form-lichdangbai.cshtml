<div class="row" hidden>
    <!--Lịch học-->
    <div class="col-sm-12 col-md-12">
        <div class="position-relative">
            <div class="form-group mb-3 overflow-auto">
                <table class="table table-hover table-bordered w-100 mt-2" id="table-lichdangbai">
                    <thead>
                        <tr>
                            <th class="text-center">Lịch đăng bài</th>
                            <th class="text-center">
                                <a class="btn btn-light-secondary"
                                   onclick="quanLyBaiDang.baiDang.lichDangBai.add(this)">
                                    <i class="bi bi-plus-circle-fill"></i>
                                </a>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="thongtin-lichdangbai">
                        <tr>
                            <td class="text-center">
                                @{
                                    var minTime = DateTime.Now.AddHours(1).ToString("yyyy-MM-ddTHH:mm");
                                }
                                <input type="datetime-local" class="form-control input-thoigianbatdau"
                                       name="input-thoigianbatdau"
                                       min="@minTime" />
                            </td>
                            <td class="text-center">
                                <a class="btn btn-light-secondary"
                                   onclick="quanLyBaiDang.baiDang.lichDangBai.delete(this)">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


