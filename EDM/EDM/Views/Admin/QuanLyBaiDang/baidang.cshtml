@using Public.Models
@model Applications.QuanLyBaiDang.Dtos.Index_OutPut_Dto
@{
    ViewBag.Title = "Quản lý bài đăng";
    var thaoTacs = Session["THAOTACs"] as List<ThaoTac>;
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a href="~/QuanLyChienDich/Index">Quản lý chiến dịch</a></li>
    <li class="breadcrumb-item active" aria-current="page">@string.Format("{0}", Model.ChienDich.TenChienDich)</li>
}
@section styles {
    @*<link href="~/Content/Admin/QuanLyBaiDang/quanlybaidang.css" rel="stylesheet" />*@
}
@section scripts {
    <script src="~/Content/Admin/QuanLyBaiDang/quanlybaidang.js"></script>
    <script>
        var quanLyBaiDang = new QuanLyBaiDang();
        quanLyBaiDang.init();
    </script>
}
<section class="section" page-group="page-group-quanlybaidang" id="page-quanlybaidang" data-aos="fade-up">
    <input id="input-idchiendich" value="@Model.ChienDich.IdChienDich" hidden />
    <div class="card" intro-container="thanhtacvu">
        <div class="card-content">
            <div class="card-body" intro-container="thaotac-coban">
                <div class="btn-group btn-group-sm" role="group">
                    @{
                        if (thaoTacs.Exists(x => x.MaThaoTac == "quanlybaidang-themmoi"))
                        {
                            <!--Thêm mới-->
                            <a class="btn btn-success"><i class="bi bi-plus-circle-fill"></i></a>
                            <a class="btn btn-light-secondary"
                               onclick="quanLyBaiDang.baiDang.displayModal_CRUD('create')">
                                Thêm mới
                            </a>
                        }
                        if (thaoTacs.Exists(x => x.MaThaoTac == "quanlybaidang-xoabo"))
                        {
                            <!--Xóa bỏ-->
                            <a class="btn btn-primary"><i class="bi bi-trash3-fill"></i></a>
                            <a class="btn btn-light-secondary"
                               onclick="quanLyBaiDang.baiDang.delete('multiple')">
                                Xóa bỏ
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card" id="baidang-getList-container"></div>
</section>
<!--baidang-crud-->
<div class="modal fade text-left" id="baidang-crud" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" removeBody="true">
</div>
@Html.Partial("~/Views/Admin/QuanLyBaiDang/baidang-crud/baidang-crud-capnhattruong.cshtml")