@using Public.Models
@using EDM_DB
@{
    ViewBag.Title = "Hòm thư";
    Layout = "~/Views/_Shared/Admin/admin.cshtml";
    string tempPath = "/Assets/templates/assets";
    Permission per = Session["Permission"] as Permission;
    tbNguoiDung nguoiDung = per.NguoiDung;
}
@section hTitle {}
@section hBreadcrumb {
    <li class="breadcrumb-item"><a href="~/Home/Index">Trang chủ</a></li>
    <li class="breadcrumb-item active" aria-current="page">Tin nhắn</li>
}
@section styles {
    <link rel="stylesheet" href="@tempPath/css/pages/email.css">
}
@section scripts {
    @*<script src="~/Content/Admin/__Home/Messenger/messenger.js"></script>*@
    <script>
        //var mess = new Messenger();
        mess.init();
    </script>
}
<div class="page-heading email-application">
    <section class="section" page-group="page-group-info" id="page-messenger">
        <div class="card" data-aos="fade-up">
            <div class="card-header">
                <div class="row">
                    <div class="col-12 text-center">
                        Hôm nay - @DateTime.Now.Date.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="list-group list-group-horizontal text-center box-s hadow" style="width: fit-content !important" role="tablist">
                            <a class="list-group-item list-group-item-primary list-group-item-action active d-flex text-nowrap" id="homthu-tab"
                               data-bs-toggle="list" href="#homthu" role="tab">
                                <i class="bi bi-mailbox2 d-none d-sm-block me-1"></i>
                                <span class="">Hòm thư&nbsp;</span>
                                <span class="badge bg-danger homthu-soluong">0</span>
                            </a>
                            <a class="list-group-item list-group-item-primary list-group-item-action d-flex text-nowrap" id="nhantin-tab"
                               data-bs-toggle="list" href="#nhantin" role="tab">
                                <i class="bi bi-chat-dots d-none d-sm-block me-1"></i>
                                <span class="">Tin nhắn&nbsp;</span>
                                <span class="badge bg-danger nhantin-soluong">0</span>
                            </a>
                        </div>
                        <hr />
                        <div class="tab-content text-justify">
                            <div class="tab-pane fade show active" id="homthu" role="tabpanel"
                                 aria-labelledby="homthu-tab">
                                <div class="content-area-wrapper">
                                    @Html.Partial("~/Views/Admin/__Home/Messenger/messenger-homthu.cshtml")
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nhantin" role="tabpanel"
                                 aria-labelledby="nhantin-tab">
                                <div class="row">
                                    @Html.Partial("~/Views/Admin/__Home/Messenger/messenger-nhantin.cshtml")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>