@using Public.Models
@{
    string tempPath = "/Assets/templates/assets";
    PermissionM per = Session["Permission"] as PermissionM;
}
<div class="card">
    <div class="card-header">
        <i class="bi bi-pin-angle-fill">
        </i> - Thông tin tài khoản
    </div>
    <div class="card-body position-relative">
        <a href="~/AccountInfo/Index" class="card-opacity bg-body">
            <p class="fs-1"><i class="bi bi-person-circle"></i></p>
        </a>
        <div class="row pt-3" style="height: 300px; overflow-y:auto">
            <form class="form form-vertical">
                <div class="form-body">
                    <div class="row">
                        <div class="col-12 text-center pb-4">
                            <div class="avatar avatar-xl">
                                @if (per.NguoiDung.GioiTinh.Value)
                                {
                                    <img src="@tempPath/images/faces/2.jpg">
                                }
                                else
                                {
                                    <img src="@tempPath/images/faces/5.jpg">
                                }
                            </div>
                        </div>
                        <!--Tên đăng nhập-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Tên đăng nhập</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control" value="@per.NguoiDung.TenDangNhap">
                                    <div class="form-control-icon">
                                        <i class="bi bi-person"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Mật khẩu-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Mật khẩu</label>
                                <div class="position-relative">
                                    <input type="password" class="form-control" value="@per.NguoiDung.MatKhau">
                                    <div class="form-control-icon">
                                        <i class="bi bi-lock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Giới tính-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Giới tính</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control" value="@(per.NguoiDung.GioiTinh.Value ? "Nam": "Nữ")">
                                    <div class="form-control-icon">
                                        <i class="@(per.NguoiDung.GioiTinh.Value ? "bi bi-gender-male": "bi bi-gender-female")"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Số điện thoại-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Số điện thoại</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control" value="@per.NguoiDung.SoDienThoai">
                                    <div class="form-control-icon">
                                        <i class="bi bi-phone"></i>
                                    </div>
                                </div>
                            </div>
                        </div> 
                        <!--Email-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Email</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control" value="@per.NguoiDung.Email">
                                    <div class="form-control-icon">
                                        <i class="bi bi-mailbox"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Ngày sinh-->
                        <div class="col-12 col-sm-12 col-lg-6">
                            <div class="form-group has-icon-left">
                                <label>Ngày sinh</label>
                                <div class="position-relative">
                                    <input type="text" class="form-control" value="@(per.NguoiDung.NgaySinh == null ? "" : per.NguoiDung.NgaySinh.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture))">
                                    <div class="form-control-icon">
                                        <i class="bi bi-calendar-date"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>